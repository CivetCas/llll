{
  "manifest_version": 2,
  "name": "Listen 1 Next",
  "homepage_url": "https://github.com/listen1",
  "description": "one for all free music in china",
  "permissions": [
    "notifications",
    "unlimitedStorage",
    "cookies",
    "*://music.163.com/*",
    "*://*.music.163.com/*",
    "*://*.xiami.com/*",
    "*://*.qq.com/*",
    "*://*.kugou.com/",
    "*://*.kuwo.cn/",
    "*://*.bilibili.com/*",
    "*://*.bilivideo.com/*",
    "*://*.migu.cn/*",
    "*://api.github.com/*",
    "*://github.com/*",
    "*://gist.githubusercontent.com/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "icons": {
    "128": "images/logo.png",
    "16": "images/logo_16.png",
    "48": "images/logo_48.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "images/logo.png",
    "default_title": "Listen1 Next"
  },
  "web_accessible_resources": [
    "assets/fonts/listen1-icon.eot",
    "assets/fonts/listen1-icon.ttf",
    "assets/fonts/listen1-icon.woff",
    "assets/fonts/listen1-icon.svg",
    "images/loading.svg",
    "images/*.png",
    "images/*.jpg"
  ]
}
