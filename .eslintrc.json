{
    "parserOptions": {
        "ecmaVersion": 11
    },
    "extends": [
        "airbnb-base",
        "prettier",
        "plugin:vue/vue3-recommended"
    ],
    "rules": {
        "camelcase": "off",
        "linebreak-style": "off"
    },
    "globals": {
        "axios": "readonly",
        "emitter": "readonly",
        "window": "readonly",
        "browser": "readonly",
        "chrome": "readonly"
    },
    "env": {
        "browser": true,
        "node": false,
        "webextensions": true
    },
    "ignorePatterns": [
        "**/vendor/*.js"
    ]
}